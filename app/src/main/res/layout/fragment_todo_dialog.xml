<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="@+id/date_title"
        app:layout_constraintStart_toEndOf="@+id/date_title"
        app:layout_constraintTop_toTopOf="@+id/date_title" />

    <TextView
        android:id="@+id/date_title"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="date"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/content_title"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="100dp"
        android:text="content"
        app:layout_constraintStart_toStartOf="@+id/date_title"
        app:layout_constraintTop_toBottomOf="@+id/time_title" />

    <TextView
        android:id="@+id/time_title"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="100dp"
        android:text="time"
        app:layout_constraintStart_toStartOf="@+id/content_title"
        app:layout_constraintTop_toBottomOf="@+id/date_title" />

    <EditText
        android:id="@+id/contentEdit"
        android:layout_width="216dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="content"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/content_title"
        app:layout_constraintStart_toEndOf="@+id/content_title"
        app:layout_constraintTop_toTopOf="@+id/content_title" />

    <EditText
        android:id="@+id/timeEdit"
        android:layout_width="166dp"
        android:layout_height="157dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="12:45"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_title"
        app:layout_constraintTop_toBottomOf="@+id/contentEdit"
        app:layout_constraintVertical_bias="0.625" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="250dp"
        android:layout_height="124dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="@+id/time_title"
        app:layout_constraintStart_toEndOf="@+id/time_title"
        app:layout_constraintTop_toTopOf="@+id/time_title" />

</androidx.constraintlayout.widget.ConstraintLayout>